datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Image {
  id           Int           @id @default(autoincrement())
  path         String
  dateTaken    DateTime
  dateEdited   DateTime
  metadataJson String
  TagOnImages  TagOnImages[]
}

model TagGroup {
  id   Int    @id @default(autoincrement())
  name String
  tags Tag[]
}

model Tag {
  id          Int           @id @default(autoincrement())
  name        String
  groupId     Int
  tagGroup    TagGroup      @relation(fields: [groupId], references: [id])
  TagOnImages TagOnImages[]
}

model TagOnImages {
  tagId   Int
  tag     Tag   @relation(fields: [tagId], references: [id])
  imageId Int
  image   Image @relation(fields: [imageId], references: [id])

  @@id([tagId, imageId])
}
