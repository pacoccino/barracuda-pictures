datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Image {
  id            String        @id @default(uuid())
  path          String        @unique
  dateTaken     DateTime      @default(now())
  metadata      Json          @default("{}")
  tagsOnImages  TagsOnImage[]
}

model TagGroup {
  id            String        @id @default(uuid())
  name          String        @unique
  tags          Tag[]
}

model Tag {
  id            String        @id @default(uuid())
  name          String
  tagGroupId    String
  tagGroup      TagGroup      @relation(fields: [tagGroupId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tagsOnImages  TagsOnImage[]

  @@unique([name, tagGroupId])
}

model TagsOnImage {
  id            String        @id @default(uuid())
  tagId         String
  tag           Tag           @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  imageId       String
  image         Image         @relation(fields: [imageId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([tagId, imageId])
}
